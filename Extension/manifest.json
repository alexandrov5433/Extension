{
    "manifest_version": 3,
    "name": "Product Price Tracker",
    "description": "Tracking prices.",
    "version": "1.0",
    "action": {
        "default_icon": {
            "16": "./images/hi-icon.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
    "https://*/",
    "http://*/"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}